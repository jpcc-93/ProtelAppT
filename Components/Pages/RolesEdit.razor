@page "/rol-edit/{Id:int}"
@inherits ProtelAppT.Service.CrudComponentBase<Rol>
@inject IGenericRepository Repo
@inject IDialogService DialogService
@inject ISnackbar Snackbar
@using ProtelAppT.Repositories
@using ProtelAppT.Data


<MudPaper Class="pa-4 mx-auto mt-10" MaxWidth="700px" Elevation="6"
          Style="border: 1px solid #ccc; box-shadow: 0 2px 12px rgba(0,0,0,0.1);">
    <MudText Typo="Typo.h5" Class="mb-4">Editar Roles</MudText>

    @if (Entity == null)
    {
        <MudProgressCircular Indeterminate="true" Color="Color.Primary" />
    }
    else
    {
        <EditForm Model="Entity" OnValidSubmit="ActualizarRol">
            <DataAnnotationsValidator />
            <ValidationSummary />

            <MudGrid>

                <MudItem xs="12">
                    <MudTextField Label="Nombre del Rol" @bind-Value="Entity.Nombre" Required="true" />
                </MudItem>                             

                <MudItem xs="12">
                    <MudButton ButtonType="ButtonType.Submit" Variant="Variant.Filled" Color="Color.Primary">Guardar Cambios</MudButton>
                    <MudButton Class="ml-2" Variant="Variant.Outlined" OnClick="Cancel" Color="Color.Default">Cancelar</MudButton>
                </MudItem>
            </MudGrid>
        </EditForm>
    }
</MudPaper>


@code {

    private async Task ActualizarRol()
    {
        
        await Save();
        Snackbar.Add("Rol actualizado.", Severity.Success);
    }

    private void Cancel()
    {
        Nav.NavigateTo("/roles");
    }
}

}
